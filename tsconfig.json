{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "types": [
            "cypress",
            "node"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@pages/*": [
                "cypress/page-objects/pages/*"
            ],
            "@components/*": [
                "cypress/page-objects/components/*"
            ],
            "@api/*": [
                "cypress/page-objects/api/*"
            ],
            "@support/*": [
                "cypress/support/*"
            ],
            "@fixtures/*": [
                "cypress/fixtures/*"
            ]
        }
    },
    "include": [
        "cypress/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}